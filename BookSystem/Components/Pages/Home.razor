@page "/"

<PageTitle>Home</PageTitle>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Management</title>
    <style>
        /* Simple CSS for better layout */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .book {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px 0;
            display: flex;
            align-items: center;
        }
        img {
            max-width: 100px;
            max-height: 150px;
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <h1>Welcome to Your Book App!</h1>

    <h2>All Books</h2>
    <div id="bookList"></div>

    <script>
        // Function to fetch all books
        function fetchBooks() {
            fetch('/api/books')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(books => {
                    const bookListDiv = document.getElementById('bookList');
                    bookListDiv.innerHTML = ''; // Clear existing content

                    // Create book elements
                    books.forEach(book => {
                        const bookDiv = document.createElement('div');
                        bookDiv.className = 'book';
                        bookDiv.innerHTML = `
                                    <img src="${book.coverImage ? `data:image/jpeg;base64,${book.coverImage}` : 'placeholder.jpg'}" alt="${book.bookTitle} Cover" />
                                    <div>
                                        <h3>${book.bookTitle}</h3>
                                        <p><strong>Pages:</strong> ${book.bookPages}</p>
                                        <p><strong>Summary:</strong> ${book.bookSummary}</p>
                                    </div>
                                `;
                        bookListDiv.appendChild(bookDiv);
                    });
                })
                .catch(error => {
                    console.error('Error fetching books:', error);
                });
        }

        // Fetch books on page load
        window.onload = fetchBooks;
    </script>

</body>
</html>

