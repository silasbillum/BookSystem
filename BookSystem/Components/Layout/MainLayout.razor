@inherits LayoutComponentBase
@using System.Threading

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="main-layout">



    <!-- Sidebar Drawer -->
    <aside class="sidebar">
        <NavMenu />
    </aside>

    <!-- Main Content Area -->
    <main class="content px-4">
        @Body
    </main>

    <!-- Error UI -->
    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
</div>


<style>
    /* Basic styling for the layout */
    .main-layout {
        display: grid;
        grid-template-areas:
            "app-bar app-bar"
            "sidebar content";
        grid-template-rows: auto 1fr;
        grid-template-columns: 240px 1fr;
        height: 100vh;
    }

    .app-bar {
        grid-area: app-bar;
        background-color: #333;
        color: white;
        padding: 10px;
    }

    .sidebar {
        grid-area: sidebar;
        background-color: #f8f9fa;
        padding: 10px;
        border-right: 1px solid #ddd;
    }

    .content {
        grid-area: content;
        padding: 20px;
        overflow-y: auto;
    }

    /* Error UI Styling */
    #blazor-error-ui {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .reload, .dismiss {
        color: #007bff;
        cursor: pointer;
        text-decoration: underline;
    }
</style>
